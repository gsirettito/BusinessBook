<Window x:Class="Bussines.DeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete" Height="120" Width="300">
    <Grid>
        <TextBlock VerticalAlignment="Center" Margin="0,-20,0,0" HorizontalAlignment="Center">¿Estas seguro que deseas eliminar esta entrada?</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Padding="8,4" Margin="5" IsDefault="True" Click="Ok_Click">Aceptar</Button>
            <Button Padding="8,4" Margin="5" IsCancel="True">Cancelar</Button>
        </StackPanel>
    </Grid>
</Window>
